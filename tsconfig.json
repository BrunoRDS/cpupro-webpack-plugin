{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "types": ["node"],
    "skipLibCheck": true // We're using both the webpack 4 and webpack 5 typings, which conflict
  },
  "include": ["src"]
}
